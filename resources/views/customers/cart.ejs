<section class="cart py-10">
    <% if(session.cart) { %>
    <div class="order container mx-auto xl:w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="/images/cart.jpg" alt="">
            <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
        </div>
        <div class="order-list">
            <% for(let coffee of Object.values(session.cart.items)) { %>
            <div class="flex items-center my-8">
                <img class="w-24 rounded" src="/images/coffee-types/<%= coffee.item.image %>" alt="">
                <div class="flex-1 ml-4">
                    <h1><%= coffee.item.name %></h1>
                </div>
                <span class="flex-1"><%= coffee.qty %></span>
                <span class="font-bold text-lg">â‚¹ <%= coffee.item.price * coffee.qty %></span>
            </div>
            <% } %>
        </div>
        <hr>
        <div class="text-right py-4">
            <div>
                <span class="text-lg font-bold">Total Amount:</span>
                <span class="amount text-2xl font-bold ml-2">â‚¹ <%= session.cart.totalPrice %></span>
            </div>
            <% if(user) { %>
            <div>
                <form action="/orders" method="POST" class="mt-12">
                    <input name="phone" class="border border-gray-400 p-2 w-1/2 mb-4" type="text"
                        placeholder="Phone number" required>
                    <input name="address" class="border border-gray-400 p-2 w-1/2" type="text" placeholder="Address"
                        required>
                    <div>
                        <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6" type="submit">Order
                            Now</button>
                    </div>
                </form>
            </div>
            <% } else { %>
            <a href="/login"
                class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Login
                to continue</a>
            <% } %>

        </div>
    </div>
    <% } else { %>
    <div class="empty-cart py-16">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2">Empty Cart ðŸ™„ </h1>
            <p class="text-gray-500 text-lg mb-12">You probably haven't ordered a coffee yet
                <img class="w-2/5 mx-auto" src="/images/emptycart.png" alt="empty-cart">
                <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Order
                    Now</a>
        </div>
    </div>
    <% } %>
</section>